[Unit]
Description=Apartment Bot - Telegram notifications for new apartments
After=network.target

[Service]
Type=simple
User=fmos
WorkingDirectory=/home/fmos/Documents/00_Coding/apartment_bot
ExecStart=/home/fmos/Documents/00_Coding/apartment_bot/.venv/bin/python main.py
Restart=always
RestartSec=10

# Environment
Environment=PYTHONUNBUFFERED=1

# Logging
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
